		{
			"name": "upload File",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"//parse response data\r",
							"\r",
							"const responseData = pm.response.json();\r",
							"const uploadedFileName = pm.environment.get(\"uploadedFileName\");\r",
							"\r",
							"pm.environment.set(\"file_metadata\", responseData);\r",
							"pm.environment.set(\"fileId\", responseData.id);\r",
							"\r",
							"//check code status\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"path to downloaded file should contains file name\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(uploadedFileName).to.eql(responseData.name);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disabledSystemHeaders": {
					"content-type": true
				}
			},
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Dropbox-API-Arg",
						"value": "{\"autorename\":false,\"mode\":\"add\",\"mute\":false,\"path\":\"/{{uploadedFileName}}\",\"strict_conflict\":false}"
					},
					{
						"key": "Content-Type",
						"value": "application/octet-stream"
					}
				],
				"body": {
					"mode": "file",
					"file": {
						"src": "{{uploadedFileName}}"
					}
				},
				"url": {
					"raw": "{{baseUrl}}/2/files/upload",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"2",
						"files",
						"upload"
					]
				}
			},
			"response": []
		},
