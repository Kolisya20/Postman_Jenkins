	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"//send refresh tocken for automatically getting access one ",
					"",
					"class DropboxAuthPm {",
					"    constructor(pm) {",
					"        this.pm = pm;",
					"        this.appKey = this._getEnv('appKey')",
					"        this.appSecret = this._getEnv('appSecret')",
					"        this.refresh_token = this._getEnv('refresh_token')",
					"    }  ",
					"",
					"    _getEnv(varName) {",
					"        const rv = this.pm.environment.get(varName)",
					"        return rv",
					"    }",
					"",
					"    encodedKeys() {",
					"        return CryptoJS.enc.Base64.stringify(CryptoJS.enc.Utf8.parse(this.appKey + \":\" + this.appSecret));",
					"    }",
					"",
					"    setAccessToken () {",
					"        const echoPostRequest = {",
					"            url: 'https://api.dropbox.com/oauth2/token',",
					"            method: 'POST',",
					"            header: {",
					"                \"Content-Type\": \"application/x-www-form-urlencoded\",",
					"                \"Authorization\": `Basic ${this.encodedKeys()}`",
					"            },",
					"            body: {",
					"                mode: 'urlencoded',",
					"                urlencoded: [",
					"                    {key: \"grant_type\", value: \"refresh_token\"},",
					"                    {key:\"refresh_token\", value: pm.environment.get(\"refresh_token\")},",
					"                ]}",
					"        };",
					"",
					"        this.pm.sendRequest(echoPostRequest, function (err, res) {",
					"            if (err === null) {",
					"                console.log('Update the token')",
					"                const responseJson = res.json();",
					"                pm.environment.set(\"token\", responseJson.access_token);",
					"            }",
					"        });",
					"    }",
					"}",
					"",
					"const dropboxAuthObj = new DropboxAuthPm(pm);",
					"dropboxAuthObj.setAccessToken();",
					"",
					""
				]
			}
		},
